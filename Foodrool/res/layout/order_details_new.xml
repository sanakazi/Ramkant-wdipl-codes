                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/list_text_size" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llHeader2"
                    android:layout_toRightOf="@+id/txttriangle2"
                    android:background="@drawable/orderlist_mainx"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:weightSum="4" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center_vertical"
                        android:layout_toLeftOf="@+id/btnArr"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="1" >

                        <TextView
                            android:id="@+id/txtCustNames"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.45"
                            android:text="Customer Name :"
                            android:textSize="@dimen/list_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:ellipsize="end"
                            android:lines="1"
                            android:textSize="@dimen/list_text_size" />

                        <TextView
                            android:id="@+id/txtCustName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.45"
                            android:textSize="@dimen/list_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_below="@+id/ll3"
                        android:layout_gravity="center_vertical"
                        android:layout_toLeftOf="@+id/btnArr"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="1" >

                        <TextView
                            android:id="@+id/txtCustAdd"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.45"
                            android:ellipsize="end"
                            android:lines="1"
                            android:text="Customer Address :"
                            android:textSize="@dimen/list_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:ellipsize="end"
                            android:lines="1"
                            android:textSize="@dimen/list_text_size" />

                        <TextView
                            android:id="@+id/txtCustAddr"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.45"
                            android:ellipsize="end"
                            android:textSize="@dimen/list_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_below="@+id/ll3"
                        android:layout_gravity="center_vertical"
                        android:layout_toLeftOf="@+id/btnArr"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="1" >

                        <TextView
                            android:id="@+id/txtPayment"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.45"
                            android:ellipsize="end"
                            android:lines="1"
                            android:text="Payment Mode :"
                            android:textSize="@dimen/list_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:ellipsize="end"
                            android:lines="1"
                            android:textSize="@dimen/list_text_size" />

                        <TextView
                            android:id="@+id/txtPaymentMode"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.45"
                            android:ellipsize="end"
                            android:textSize="@dimen/list_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_below="@+id/ll3"
                        android:layout_gravity="center_vertical"
                        android:layout_toLeftOf="@+id/btnArr"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="1" >

                        <TextView
                            android:id="@+id/txtInst"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.45"
                            android:ellipsize="end"
                            android:lines="1"
                            android:text="Amount :"
                            android:textSize="@dimen/list_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:ellipsize="end"
