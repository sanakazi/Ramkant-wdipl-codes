                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:ellipsize="end"
                            android:lines="1"
                            android:textSize="@dimen/list_text_size" />

                        <TextView
                            android:id="@+id/txtRestaurantAddr"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.45"
                            android:ellipsize="end"
                            android:textSize="@dimen/list_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_below="@+id/ll2"
                        android:layout_gravity="center_vertical"
                        android:layout_toLeftOf="@+id/btnArr"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="1" >

                        <TextView
                            android:id="@+id/txtRestaurantM"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.45"
                            android:drawableLeft="@drawable/ic_call"
                            android:ellipsize="end"
                            android:lines="1"
                            android:textSize="@dimen/list_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:ellipsize="end"
                            android:lines="1"
                            android:textSize="@dimen/list_text_size" />

                        <TextView
                            android:id="@+id/txtRestaurantMob"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.45"
                            android:ellipsize="end"
                            android:lines="1"
                            android:textSize="@dimen/list_text_size" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llMob"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_below="@+id/ll3"
                        android:layout_gravity="center_vertical"
                        android:layout_toLeftOf="@+id/btnArr"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="1" >

                        <TextView
                            android:id="@+id/txtRestaurantM1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.45"
                            android:drawableLeft="@drawable/ic_call"
                            android:ellipsize="end"
                            android:lines="1"
                            android:textSize="@dimen/list_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:ellipsize="end"
                            android:lines="1"
                            android:textSize="@dimen/list_text_size" />

                        <TextView
                            android:id="@+id/txtRestaurantMob1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.45"
                            android:ellipsize="end"
                            android:lines="1"
                            android:textSize="@dimen/list_text_size" />
                    </LinearLayout>
                    
                    <LinearLayout
