                    android:layout_below="@+id/txttop3"
                    android:background="@drawable/orderdetails_right" />

                <TextView
                    android:id="@+id/txttop3"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/txttriangle3"
                    android:background="#DEDEDE" />

                <LinearLayout
                    android:id="@+id/llHeader5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txttop3"
                    android:layout_toRightOf="@+id/txttriangle3"
                    android:background="#DEDEDE"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/llHeader4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/orderdetail_heading_n"
                        android:gravity="center_vertical"
