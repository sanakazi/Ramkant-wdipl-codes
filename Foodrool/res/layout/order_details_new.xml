                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llHeader"
                    android:layout_toRightOf="@+id/txttriangle"
                    android:background="@drawable/orderlist_mainx"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:weightSum="4" >

                    <LinearLayout
